<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AgahiNet" parent="Theme.Material3.Light.NoActionBar">
        
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <item name="android:fontFamily">@font/vazirmatn_regular</item>

    </style>


    <style name="TextLabelSmall" parent="Theme.AgahiNet">
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelSmall</item>
    </style>

    <style name="cutCorners" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
    </style>

    <style name="cutCorners4" parent="cutCorners">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="cutCorners8" parent="cutCorners">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="cutCorners10" parent="cutCorners">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="roundCorners32" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">32dp</item>
    </style>


    <style name="bigButton" parent="Widget.Material3.Button.TonalButton">
        <item name="shapeAppearance">@style/cutCorners8</item>
    </style>

    <style name="simpleToolbarTitleAppearance" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/vazirmatn_regular</item>
    </style>

    <style name="filterChipTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/vazirmatn_regular</item>
    </style>

    <style name="simpleToolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/simpleToolbarTitleAppearance</item>
        <item name="titleTextColor">#FFFFFF</item>
        <item name="navigationIconTint">#FFFFFF</item>
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:background">@color/toolbar_background</item>

    </style>

    <style name="adFragmentToolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/simpleToolbarTitleAppearance</item>

        <item name="animateNavigationIcon">true</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="titleTextEllipsize">end</item>
        <item name="titleTextColor">#FFFFFF</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextViewWithArrow">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="drawableEndCompat">@drawable/ic_arrow_left</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="drawableTint">#616161</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="divier16" parent="@style/Widget.Material3.MaterialDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="dividerInsetStart">16dp</item>
        <item name="dividerInsetEnd">16dp</item>
    </style>

    <style name="UserScreenTextView" parent="TextViewWithArrow">
        <item name="android:paddingBottom">24dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/ripple_effect</item>
    </style>

    <style name="TextViewSelectedItems">
        <item name="drawableStartCompat">@drawable/ic_check</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="android:textColor">#616161</item>
        <item name="drawableTint">#81C784</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:drawablePadding">2dp</item>
    </style>

    <style name="PriceRangeEditText">
        <item name="android:digits">0123456789</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">18</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewContactInfo" parent="@style/Widget.Material3.Button.TextButton.Icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="drawableTint">?attr/colorPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
    </style>


    <style name="materialDialogStyle" parent="MaterialAlertDialog.Material3">
        <item name="android:layoutDirection">rtl</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
